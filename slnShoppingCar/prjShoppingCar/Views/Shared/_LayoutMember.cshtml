        <div class="wrapper">
            @*Sidebar*@
            <nav class="box" id="sidebar">
                <div id="dismiss">
                    <i class="fas fa-arrow-left"></i>
                </div>
                <div class="sidebar-header">
                    <a href="@Url.Action(" Index","Home")">
