<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 婚創工作室</title>
    @*
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    *@
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.2/css/all.min.css">

    <link href="https://fonts.googleapis.com/css?family=Noto+Sans+TC&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
          integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Bootstrap CSS CDN -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <!-- Our Custom CSS -->
    <link rel="stylesheet" href="~/Scripts/bootstrap.bundle.min.js">
    <link rel="stylesheet" href="~/Scripts/bootstrap.js">
    <!-- Scrollbar Custom CSS -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css">
    <!-- Scrollbar Custom CSS -->
    <title>婚宴方案</title>
    <link rel="stylesheet" type="text/css" href="~/element/page-style.css">


    <style>
        section {
            background-image: url("~/images/bg.jpg");
            background-repeat: no-repeat;
        }
    </style>

    <script>
        $('#youModel').on('shown.bs.modal', function (e) {
            // 关键代码，如没将modal设置为 block，则$modala_dialog.height() 为零
            $(this).css('display', 'block');
            var modalHeight = $(window).height() / 2 - $('#youModel .modal-dialog').height() / 2;
            $(this).find('.modal-dialog').css({
                'margin-top': modalHeight
            });
        });</script>
</head>

<body onload="myFunction()" style="margin:0; background: rgb(155, 149, 149);">
    @*==========================置頂選單開始=======================*@
    <div id="loader">

    </div>
    <div style="display:none;" id="myDiv" class="animate-bottom">
        <div class="container-fluid">
            <div class="row">
                <div id="top-bar">
                    <div class="topmenu">
                        <div class="topbtn1">
                            <button type="button" id="sidebarCollapse" class="btn">
                                <i class="fas fa-align-justify"></i>
                                <span></span>
                            </button>
                        </div>

                        <ul class="toplist">
                            <li>
                                @Html.ActionLink("網站管理員專區", "ManagerCenter", "Home", new { area = "" }, new { @class = "navbar-brand" })

                            </li>
                            <li>
                                <a>@Html.ActionLink("會員管理　　｜", "ManagerMember", "Home")</a>
                            </li>
                            <li>
                                <a>@Html.ActionLink("商品管理　　｜", "ManagerProduct", "Home")</a>
                            </li>
                            <li>
                                <a>@Html.ActionLink("登出　　｜", "ManagerLogout", "Home")</a>
                            </li>

                        </ul>

                    </div>
                </div>
            </div>
        </div>
        @*==========================置頂選單結束=======================*@
        @*=======================================隱藏選單================================*@


        <div class="wrapper">
            @*Sidebar*@
            <nav class="box" id="sidebar">
                <div id="dismiss">
                    <i class="fas fa-arrow-left"></i>
                </div>
                <div class="sidebar-header">
                    @Html.ActionLink("網站管理員專區", "ManagerCenter", "Home", new { area = "" }, new { @class = "navbar-brand" })

                </div>

                <ul class="list-unstyled components">
                    <li>@Html.ActionLink("會員管理", "ManagerMember", "Home")</li>
                    <li>@Html.ActionLink("商品管理", "ManagerProduct", "Home")</li>

                    <li>@Html.ActionLink("登出", "ManagerLogout", "Home")</li>

                    <li><a href="#">@Session["WelCome"]</a></li>
                </ul>

                <div class="list-unstyled CTAs">
                    <p>sdfsdfdsfsdfdsfd</p>
                </div>
            </nav>
        </div>
        @*=======================================隱藏選單結束*@
        <section class="page-body">

            <div class="container body-content">
                @RenderBody()
                <hr />
            </div>
        </section>

        <div class="footer">
            <p>&copy; @DateTime.Now.Year - 婚創工作室</p>
        </div>

    </div>
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-1.12.0.min.js"></script>
    <!-- Bootstrap Js CDN -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <!-- jQuery Custom Scroller CDN -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.concat.min.js"></script>

    <script src="~/element/sidebar.js" type="text/javascript"></script>

    <script>
        var myVar;

        function myFunction() {
            myVar = setTimeout(showPage, 2000);
        }

        function showPage() {
            document.getElementById("loader").style.display = "none";
            document.getElementById("myDiv").style.display = "block";
        }
    </script>
</body>

</html>