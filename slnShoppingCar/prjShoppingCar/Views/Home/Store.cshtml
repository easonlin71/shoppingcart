@model IEnumerable<prjShoppingCar.Models.tProduct>

@{
    ViewBag.Title = "婚禮小物";
}
<style>
    .btn {
        -moz-box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
        -webkit-box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
        box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
    }

    .goods {
        -moz-box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
        -webkit-box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
        box-shadow: 4px 4px 3px rgba(20%,20%,40%,0.5);
        border: 1px solid #808080;
        border-radius: 3px;
        height: 100%;
    }
</style>
<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-lg-4" style="background-color:#fafafa;">
            <div class="goods">
                <div class="box" style="max-height:40%; overflow:hidden;">
                    <a href="@Url.Action("ProductView","Home",new {id=item.fPId })">
                        <img src="~/images/wedding/all/@item.fImg" style="width:100%; max-height:100%" class="img-fluid">
                    </a>
                </div>
                <div class="caption" style="text-align:center;">
                    <h2 style="height:100px;font-size: 40px;">@item.fName</h2>
                    <p style="font-size: 30px">單價：@item.fPrice</p>
                    @if (Session["Member"] == null)
                    {
                        <p></p>
                    }
                    else
                    {
                        <p style="line-height:90%;display:block;">
                            <a href="@Url.Action("AddCar")?fPId=@item.fPId" class="btn btn-primary">加入購物車</a>
                        </p>
                    }
                </div>
            </div>
        </div>
    }
</div>