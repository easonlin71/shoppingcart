@model IEnumerable<prjShoppingCar.Models.tMember>

@{
    ViewBag.Title = "會員中心";
}



    <h2>會員中心</h2>

<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label col-md-2">帳號</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fUserId)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">密碼</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fPwd)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">姓名</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fName)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">信箱</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fEmail)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">手機</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fTel)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">性別</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fSex)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">生日</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fBirthday)}
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">地址</label>
        <div class="col-md-10">
            @foreach (var item in Model)
            {@Html.DisplayFor(modelItem => item.fUAddress)}
        </div>
    </div>
    
    <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button>
                    @foreach (var item in Model)
                    {@Html.ActionLink("編輯", "Edit", new { fUserId = item.fUserId })}
            </button>
        </div>
</div>
</div>